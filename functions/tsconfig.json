{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "lib",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.tests.ts",
    "src/menus/__tests__/menuItem.handlers.test.ts"
  ]
} 