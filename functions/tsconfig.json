{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test/**/*",
    "src/**/*.test.ts",
    "src/admin/userManagement.v2.test.ts",
    "src/auth/line.handlers.test.ts",
    "src/auth/line.service.test.ts"
  ]
}