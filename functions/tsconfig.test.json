{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "allowJs": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "noEmitOnError": false,
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 