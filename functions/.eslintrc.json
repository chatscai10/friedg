{
  "root": true,
  "extends": ["../.eslintrc.json"],
  "rules": {
    "linebreak-style": 0,
    "quotes": 0,
    "comma-dangle": 0,
    "no-trailing-spaces": 0,
    "arrow-parens": 0,
    "indent": 0,
    "eol-last": 0
  },
  "ignorePatterns": ["**/*.test.js", "**/*.spec.js"],
  "env": {
    "jest": true,
    "mocha": true
  },
  "globals": {
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly", 
    "beforeEach": "readonly",
    "afterEach": "readonly"
  }
} 